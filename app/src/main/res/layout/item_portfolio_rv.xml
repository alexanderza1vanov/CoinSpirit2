<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/item_color"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RLCurrency"
        android:background="#b3e5fc"
        android:padding="8dp">

        <TextView
            android:id="@+id/TVSymbolCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="3dp"
            android:text="Symbol"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVCurrencyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="3dp"
            android:text="Текущая цена"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/TVNameCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TVSymbolCurrency"
            android:padding="3dp"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/TVQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/TVCurrencyPrice"
            android:padding="3dp"
            android:text="Количество"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/TVAvgPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/TVSymbolCurrency"
            android:layout_toStartOf="@+id/TVCurrencyPrice"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="$Цена покупки"
            android:gravity="center"
            android:textColor="@color/black" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
